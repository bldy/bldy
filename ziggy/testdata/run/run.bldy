"""Example of a rule that runs a thing."""

load("https://bldy.build/std/master/assert.bldy", "assert")

def _impl(ctx):
    assert.fail("can't build {} outside the build context ".format(ctx.name))
    print("Building {}_{}_{} ".format(ctx.name, ctx.os, ctx.arch))

runner = rule(
    implementation = _impl,
)

runner(name = "run_test")
